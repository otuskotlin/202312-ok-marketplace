{
  "request": {
    "method": "POST",
    "url": "/v1/ad/read"
  },

  "response": {
    "status": 200,
    "jsonBody": {
      "responseType": "read",
      "result": "success",
      "ad": {
        "id": "{{{jsonPath request.body '$.ad.id'}}}",
        "title": "Требуется болт",
        "description": "Требуется болт 100x5 с шестигранной шляпкой",
        "adType": "demand",
        "visibility": "public"
      }
    },
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": ["response-template"]
  }
}
